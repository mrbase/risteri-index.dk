{% for item in feed %}
    {% if loop.first %}
    <h3 class="container-fluid">Sidste {{ loop.length }} nyheder på Facebook</h3>
    <section class="container-fluid social facebook">
    {% endif %}
    {% if item.message is defined %}
        <article class="item col-md-6">
            <div class="wrapper">
            {% if item.picture is defined and item.picture %}
                <div class="img"><img src="{{ item.picture }}"></div>
            {% else %}
                <div class="img"><img src="http://placehold.it/130x130/f2f2f2/f2f2f2?text=n/a" alt=""></div>
            {% endif %}
                <p>
                    <time><a href="https://www.facebook.com/{{ item.id }}" title="Læs opdateringen fra {{ item.created_time|date('Y-m-d H:i') }} på facebook">{{ item.created_time|date('Y-m-d H:i') }}</a></time>
                    {{ item.message|linkify('facebook', item)|nl2br }}
                </p>
            </div>
        </article>
    {% endif %}
    {% if loop.last %}
    </section>
    {% endif %}
{% endfor %}
