{% for item in feed %}
{% if loop.first %}
<h3 class="container-fluid">Sidste {{ loop.length }} nyheder p√• Facebook</h3>
<section class="container-fluid social facebook">
{% endif %}
{% if item.message is defined %}
    <article class="item col-md-6">
        <div class="wrapper">
        {% if item.picture is defined and item.picture %}
            <div class="img"><img src="{{ item.picture }}"></div>
        {% else %}
            <div class="img"><img src="http://placeholder.in/130x130?rm_size=true" alt=""></div>
        {% endif %}

            <p>
                <time><a href="https://www.facebook.com/{{ item.id }}">{{ item.created_time|date('Y-m-d H:i') }}</a></time>
                {{ item.message|linkify('facebook', item)|nl2br }}
            </p>
        </div>
    </article>
{% endif %}
{% if loop.last %}
</section>
{% endif %}
{% endfor %}


